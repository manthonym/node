extends layout

block head
  script(src="/js/bootstrap.min.js", charset="utf-8")
  link(rel='stylesheet', href='/css/bootstrap.min.css') 

block content

  :stylus
    h1, p
      margin 5px
    #form, #graph
      position relative
      width 800px
      margin 0 auto
      background #CCCCCC
      padding 10px
      margin-bottom 20px
    #graph
      height 400px
    line path
      fill none
      stroke #000
      shape-rendering crispEdges
    .area
      fill steelblue

  .well
    h1 Please connect to your account before
    p You need to connect before getting your metrics

  ol.breadcrumb
    li
        a(href='http://localhost:1234/') Home
      li.active Login

  #form
    .form-group
      form(action='/user/connect', method='post')
        p <b>Username: </b>
        input#login_username(name='username' class="form-control" placeholder="Username")
        br

        p <b>Password: </b>
        input#login_password(name='password', type="password" class="form-control" placeholder="Password")

        br
        input#metric_ok(type='submit', value='Connexion')

  .well
    a(href="http://localhost:1234/user/add") Add a new user
  