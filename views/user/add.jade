extends layout

block head
  script(src="/js/bootstrap.min.js", charset="utf-8")
  link(rel='stylesheet', href='/css/bootstrap.min.css') 


block content

  :stylus
    #form, .form-group
      position relative
      width 800px
      padding 10px
      margin-left 20px

  .well
    h1 Adding a user
    h3 With this page, you can create a new user

  ol.breadcrumb
    li
        a(href='http://localhost:1234/') Home
      li.active Create a user
    
  #form
    p Please choose a username, a mail adress and a password.
   .form-group
     form(action='/user/create' method='post')
      p <b>Username: </b> 
      input#add_username(name='username' class="form-control" placeholder="Enter username")
      br

      p <b>Email: </b> 
      input#add_mail(name='mail', type="email" class="form-control" placeholder="Enter email")
      br

      p <b>Password: </b>
      input#add_password(name='password', type="password" class="form-control" placeholder="Enter password")
      br
      br

      button.btn.btn-success#metric_ok(type='submit', value='Create', style='align-left;margin-left: 20px;')
          span.glyphicon.glyphicon-ok
          |  Create
